<div class="content-box skew first-box">
  <h1>Log in</h1>
  <div class = "unskew">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class =>"user-form col-md-8"}) do |f| %>
    <div class="form-row">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>

    <div class="form-row">
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
