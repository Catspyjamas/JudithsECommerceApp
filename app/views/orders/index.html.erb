<div class="content-box skew first-box">
  <div class="unskew">
    <% if notice %>
      <p id="notice" class="alert alert-primary"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p id="alert" class="alert alert-primary"><%= alert %></p>
    <% end %>
    <div class="row">
      <% @orders.each do |order| %>
        <div class="col-sm">
          <h2>
            Order # <%= order.id %>
            <%= link_to order.product.name, order %>
          <h2>
          <p> <%= order.product.description %> </p>
          <strong> <%= order.product.price_show %></strong>
        </div><!--/col-->
      <% end %>
    </div>
  </div>
</div>
