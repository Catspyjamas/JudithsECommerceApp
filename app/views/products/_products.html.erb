<div class="product-card">
    <%= image_tag(product.image_url, class: "img-fluid product-prev-img") %>
    <div class="card-content">
      <a href="#"><h3><%= product.name %></h3></a>
      <p><%= product.description %></p>
      <p><%= product.toxicity %></p>
      <p class="price"><strong><%= product.price %></strong></p>
      <div class="additional-options">
        <span><%= link_to 'Show', product %></span>
        <span><%= link_to 'Edit', edit_product_path(product) %></span>
        <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
      </div>
    </div>
</div>
