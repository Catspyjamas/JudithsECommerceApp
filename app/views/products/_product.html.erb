<% cache product do %>
  <div class="product-card">
    <%= image_tag(product.image_url, class: "img-fluid product-prev-img") %>
    <div class="card-content">
      <h3 class="product-name"><%= link_to product.name, product_path(product), class:"product-link" %></h3>
      <% logger.debug "Product: #{product.name}"%>
      <p><%= product.description %></p>
      <p><%= product.toxicity %></p>
      <p class="price"><strong><%= product.price_show %></strong></p>
      <% if current_user && current_user.admin? %>
        <div class="additional-options">
          <span><%= link_to 'Show', product_path(product) %></span>
          <span><%= link_to 'Edit', edit_product_path(product) %></span>
          <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
