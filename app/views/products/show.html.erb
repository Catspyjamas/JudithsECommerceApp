  <div class="skew">
    <div class="unskew-image-box">
      <%= image_tag(@product.image_url) %>
    </div>
  </div>
  <div class="content-box skew">
    <h1>
      <%= @product.name %>
    </h1>
    <div class = "unskew">
      <div class = "box-area">
        <p>
          <%= @product.description %>
        </p>
        <p>
          <strong>Toxicity:</strong>
          <%= @product.toxicity %>
        </p>
        <p>
          <strong>Price:</strong>
          <%= @product.price %>
        </p>
      </div>
      <div class= "box-area">
        <p id="notice"><%= notice %></p>
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>
      </div>
  </div>
</div>