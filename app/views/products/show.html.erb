  <div class="skew">
    <div class="unskew-image-box">
      <%= image_tag(@product.image_url) %>
    </div>
  </div>
  <div class="content-box skew">
    <h1>
      <%= @product.name %>
    </h1>
    <div class = "unskew">
      <% if notice %>
        <p id="notice" class="alert alert-primary"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p id="alert" class="alert alert-primary"><%= alert %></p>
      <% end %>
      <ul class="nav nav-tabs col-md-8" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">Description</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="additional-tab" data-toggle="tab" href="#additional" role="tab" aria-controls="additional" aria-selected="false">Additional Information</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">Reviews</a>
        </li>
        </ul>
        <div class="tab-content col-md-8" id="myTabContent">
        <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="home-tab">
          <p><%= @product.description %></p>
          <hr>
          <strong><%= @product.price %></strong>
          <div class="additional-options">
            <%= link_to 'Edit', edit_product_path(@product) %>
            <%= link_to 'Back', products_path %>
          </div>
        </div>
        <div class="tab-pane fade" id="additional" role="tabpanel" aria-labelledby="profile-tab">
          <h6>How toxic is this mushroom?</h6>
          <%= @product.toxicity %>
        </div>
        <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="contact-tab">
            <h6>Average rating</h6>
            <hr>
            <h6>Comment with the highest rating</h6>
            <%= @product.highest_rating_comment %>
            <hr>
            <h6>Comment with the lowest rating</h6>
            <%= @product.lowest_rating_comment %>
        </div>
  </div>



  </div>
</div>

