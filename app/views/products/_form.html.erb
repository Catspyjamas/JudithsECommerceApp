<%= form_with(model: product, local: true, class: "product-form") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div class="form-group">
      <%= form.label :image_url %>
      <%= form.text_field :image_url, placeholder: "Please insert a valid URL." %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= form.label :toxicity %>
      <%= form.text_field :toxicity %>
    </div>

    <div class="price">
      <%= form.label :price %>
      <%= form.text_field :price %>
    </div>
  </div>
  
  <div class="form-row">
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, placeholder: "What's special about this mushroom?" %>
      </div>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
